    { "type": "range", "id": "item_text_font_size_mobile", "label": "Item text size mobile", "min": 12, "max": 28, "step": 1, "default": 18, "unit": "px" },
    { "type": "range", "id": "item_text_font_weight", "label": "Item text font weight", "min": 300, "max": 900, "step": 100, "default": 500 },
    { "type": "range", "id": "item_text_line_height", "label": "Item text line height", "min": 1.0, "max": 2.0, "step": 0.1, "default": 1.5 },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Designed to Support Your Daily Balance" },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "Plant-based extracts, carefully selected and thoughtfully blended to support your mood, energy, and balance — the joyful way to feel your best." }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "select",
          "id": "icon_type",
          "label": "Icon type",
