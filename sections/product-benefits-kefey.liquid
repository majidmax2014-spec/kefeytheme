    { "type": "text", "id": "item_title_font_family", "label": "Item title font family", "default": "inherit" },
    { "type": "range", "id": "item_title_font_size_desktop", "label": "Item title size desktop", "min": 16, "max": 72, "step": 1, "default": 56, "unit": "px" },
    { "type": "range", "id": "item_title_font_size_mobile", "label": "Item title size mobile", "min": 14, "max": 52, "step": 1, "default": 36, "unit": "px" },
