<section
  class="kefey-benefits"
  style="
    --kb-bg: {{ section.settings.background_color }};
    --kb-highlight: {{ section.settings.highlight_bar_color }};
    --kb-title-color: {{ section.settings.title_color }};
    --kb-divider: {{ section.settings.divider_color }};
    --kb-divider-thickness: {{ section.settings.divider_thickness }}px;
    --kb-h-ff: {{ section.settings.heading_font_family }};
    --kb-h-fs-d: {{ section.settings.heading_font_size_desktop }}px;
    --kb-h-fs-m: {{ section.settings.heading_font_size_mobile }}px;
    --kb-h-fw: {{ section.settings.heading_font_weight }};
    --kb-d-ff: {{ section.settings.desc_font_family }};
    --kb-d-fs-d: {{ section.settings.desc_font_size_desktop }}px;
    --kb-d-fs-m: {{ section.settings.desc_font_size_mobile }}px;
    --kb-d-fw: {{ section.settings.desc_font_weight }};
    --kb-it-ff: {{ section.settings.item_title_font_family }};
    --kb-it-fs-d: {{ section.settings.item_title_font_size_desktop }}px;
    --kb-it-fs-m: {{ section.settings.item_title_font_size_mobile }}px;
    --kb-it-fw: {{ section.settings.item_title_font_weight }};
    --kb-ib-ff: {{ section.settings.item_text_font_family }};
    --kb-ib-fs-d: {{ section.settings.item_text_font_size_desktop }}px;
    --kb-ib-fs-m: {{ section.settings.item_text_font_size_mobile }}px;
    --kb-ib-fw: {{ section.settings.item_text_font_weight }};
    --kb-ib-lh: {{ section.settings.item_text_line_height }};
    --kb-icon-circle-d: {{ section.settings.icon_circle_size_desktop }}px;
    --kb-icon-circle-m: {{ section.settings.icon_circle_size_mobile }}px;
    --kb-icon-d: {{ section.settings.icon_size_desktop }}px;
    --kb-icon-m: {{ section.settings.icon_size_mobile }}px;
    --kb-grid-gap: {{ section.settings.grid_gap }}px;
    --kb-pt: {{ section.settings.padding_top }}px;
    --kb-pb: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="page-width">
    <div class="kefey-benefits__header">
      <h2 class="kefey-benefits__title"><span>{{ section.settings.heading }}</span></h2>
      <p class="kefey-benefits__desc">{{ section.settings.subheading }}</p>
    </div>

    <div class="kefey-benefits__grid">
      {%- for block in section.blocks -%}
        <article class="kefey-benefits__cell" {{ block.shopify_attributes }}>
          <h3 class="kefey-benefits__item-title">{{ block.settings.title }}</h3>
          <span
            class="kefey-benefits__icon"
            style="--kb-block-icon-bg: {{ block.settings.icon_bg_color }}; --kb-block-icon-color: {{ block.settings.icon_color }};"
            aria-hidden="true"
          >
            {%- if block.settings.icon_type == 'svg' and block.settings.icon_svg != blank -%}
              {{ block.settings.icon_svg }}
            {%- elsif block.settings.icon_image != blank -%}
              {{
                block.settings.icon_image
                | image_url: width: 140
                | image_tag:
                  class: 'kefey-benefits__icon-image',
                  widths: '40, 70, 100, 140',
                  sizes: '(min-width: 990px) var(--kb-icon-d, 34px), var(--kb-icon-m, 28px)',
                  loading: 'lazy',
                  alt: ''
              }}
            {%- endif -%}
          </span>
          <p class="kefey-benefits__item-text">{{ block.settings.text }}</p>
        </article>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product Benefits Kefey",
  "settings": [
    { "type": "color", "id": "background_color", "label": "Background color", "default": "#ffffff" },
    { "type": "color", "id": "highlight_bar_color", "label": "Highlight bar color", "default": "#f4c820" },
    { "type": "color", "id": "title_color", "label": "Title color", "default": "#1f1f1f" },
    { "type": "color", "id": "divider_color", "label": "Divider color", "default": "#d5d5d5" },
    { "type": "range", "id": "divider_thickness", "label": "Divider thickness", "min": 1, "max": 4, "step": 1, "default": 1, "unit": "px" },
    { "type": "range", "id": "padding_top", "label": "Padding top", "min": 0, "max": 220, "step": 4, "default": 64, "unit": "px" },
    { "type": "range", "id": "padding_bottom", "label": "Padding bottom", "min": 0, "max": 220, "step": 4, "default": 72, "unit": "px" },
