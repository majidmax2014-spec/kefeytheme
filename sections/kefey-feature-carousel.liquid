{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .kefey-feature {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: center;
    padding: 3rem 2rem;
    border-radius: 1.2rem;
  }
  @media screen and (min-width: 990px) {
    .kefey-feature {
      grid-template-columns: 1.1fr 0.9fr;
      min-height: 40rem;
      padding: 4rem 5rem;
    }
  }
  .kefey-feature__text .eyebrow {
    text-transform: uppercase;
    letter-spacing: .12rem;
    font-weight: 700;
    opacity: .8;
    margin-bottom: .8rem;
    display: block;
  }
  .kefey-feature__title {
    margin: 0 0 1.2rem 0;
  }
  .kefey-feature__desc {
    margin: 0 0 2rem 0;
  }
  .kefey-feature__cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-height: 5rem;
    padding: 1.2rem 2.6rem;
    text-decoration: none;
    border-radius: 0;
  }
  .kefey-feature__img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: contain;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} isolate gradient">
  <div class="section-{{ section.id }}-padding">
    <slider-component class="slider-mobile-gutter page-width slider-component-desktop">
      <ul
        id="Slider-{{ section.id }}"
        class="grid grid--1-col slider slider--desktop"
        role="list"
        aria-label="{{ 'general.slider.name' | t }}"
      >
        {%- for block in section.blocks -%}
          <li class="grid__item slider__slide" {{ block.shopify_attributes }}>
            <div class="kefey-feature" style="background: {{ block.settings.bg | default: '#f3f3f3' }};">
              <div class="kefey-feature__text">
                {%- if block.settings.eyebrow != blank -%}
                  <span class="eyebrow">{{ block.settings.eyebrow }}</span>
                {%- endif -%}
                {%- if block.settings.title != blank -%}
                  <h2 class="kefey-feature__title title inline-richtext {{ block.settings.heading_size }}">{{ block.settings.title }}</h2>
                {%- endif -%}
                {%- if block.settings.desc != blank -%}
                  <div class="kefey-feature__desc rte">{{ block.settings.desc }}</div>
                {%- endif -%}
                {%- if block.settings.button_label != blank -%}
                  <a
                    {% if block.settings.button_link == blank %}role="link" aria-disabled="true"{% else %}href="{{ block.settings.button_link }}"{% endif %}
                    class="button kefey-feature__cta{% if block.settings.button_secondary %} button--secondary{% endif %}"
                  >{{ block.settings.button_label }}</a>
                {%- endif -%}
              </div>
              <div>
                {%- if block.settings.image != blank -%}
                  {{ block.settings.image | image_url: width: 1400 | image_tag: class: 'kefey-feature__img', loading: 'lazy' }}
                {%- endif -%}
              </div>
            </div>
          </li>
        {%- endfor -%}
      </ul>

      <div class="slider-buttons">
        <button
          type="button"
          class="slider-button slider-button--prev"
          name="previous"
          aria-label="{{ 'general.slider.previous_slide' | t }}"
          aria-controls="Slider-{{ section.id }}"
        >
          <span class="svg-wrapper">{{- 'icon-caret.svg' | inline_asset_content -}}</span>
        </button>
        <div class="slider-counter slider-counter--dots">
          <div class="slideshow__control-wrapper">
            {%- for block in section.blocks -%}
              <button
                class="slider-counter__link slider-counter__link--dots link"
                aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                aria-controls="Slider-{{ section.id }}"
              >
                <span class="dot"></span>
              </button>
            {%- endfor -%}
          </div>
        </div>
        <button
          type="button"
          class="slider-button slider-button--next"
          name="next"
          aria-label="{{ 'general.slider.next_slide' | t }}"
          aria-controls="Slider-{{ section.id }}"
        >
          <span class="svg-wrapper">{{- 'icon-caret.svg' | inline_asset_content -}}</span>
        </button>
      </div>
    </slider-component>
  </div>
</div>

{% schema %}
{
  "name": "Kefey feature carousel",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-1" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding top", "default": 36 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding bottom", "default": 36 }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "Discover" },
        { "type": "inline_richtext", "id": "title", "label": "Title", "default": "Extra-Strength Sleep Gummies" },
        { "type": "richtext", "id": "desc", "label": "Description", "default": "<p>Made with Lemon Balm, Botanicals, and Vitamin D; as well as 10mg of Melatonin per serving to help you.</p>" },
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "button_label", "label": "Button label", "default": "EXPLORE" },
        { "type": "url", "id": "button_link", "label": "Button link" },
        { "type": "checkbox", "id": "button_secondary", "label": "Secondary button style", "default": false },
        { "type": "color", "id": "bg", "label": "Background color", "default": "#6D4B8C" },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            { "value": "h2", "label": "H2" },
            { "value": "h1", "label": "H1" },
            { "value": "h0", "label": "Hero" }
          ],
          "default": "h1",
          "label": "Heading size"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Kefey feature carousel",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}


