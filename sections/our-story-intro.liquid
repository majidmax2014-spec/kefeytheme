{{ 'our-story-intro.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign osi_h_ff = 'inherit'
  if section.settings.heading_font_family == 'heading'
    assign osi_h_ff = 'var(--font-heading-family)'
  elsif section.settings.heading_font_family == 'body'
    assign osi_h_ff = 'var(--font-body-family)'
  endif

  assign osi_t_ff = 'inherit'
  if section.settings.text_font_family == 'heading'
    assign osi_t_ff = 'var(--font-heading-family)'
  elsif section.settings.text_font_family == 'body'
    assign osi_t_ff = 'var(--font-body-family)'
  endif
-%}

<section
  id="OurStoryIntro-{{ section.id }}"
  class="our-story-intro our-story-intro--{{ section.settings.text_alignment }}"
  style="
    --osi-heading-size: {{ section.settings.heading_size }}px;
    --osi-highlight: {{ section.settings.highlight_color }};
    --osi-body-size: {{ section.settings.body_font_size }}px;
    --osi-accent-size: {{ section.settings.accent_font_size }}px;
    --osi-accent-color: {{ section.settings.accent_color }};
    --osi-pt: {{ section.settings.padding_top }}px;
    --osi-pb: {{ section.settings.padding_bottom }}px;
    --osi-max: {{ section.settings.max_width }}px;
    --osi-h-ff: {{ osi_h_ff }};
    --osi-h-fw: {{ section.settings.heading_font_weight }};
    --osi-h-fs: {{ section.settings.heading_size }}px;
    --osi-t-ff: {{ osi_t_ff }};
    --osi-t-fw: {{ section.settings.text_font_weight }};
    --osi-t-fs: {{ section.settings.body_font_size }}px;
  "
>
  <div class="our-story-intro__inner page-width">
    <div class="our-story-intro__content">
      {% if section.settings.heading != blank %}
        <div class="our-story-intro__header">
          <h2 class="our-story-intro__title">
            <span class="our-story-intro__title-text">{{ section.settings.heading }}</span>
            <span class="our-story-intro__highlight" aria-hidden="true"></span>
          </h2>
        </div>
      {% endif %}

      {% if section.settings.body_text != blank %}
        <div class="our-story-intro__body rte">
          {{ section.settings.body_text }}
        </div>
      {% endif %}

      {% if section.settings.accent_text != blank %}
        <p class="our-story-intro__accent">{{ section.settings.accent_text }}</p>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Our Story Intro",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Story"
    },
    {
      "type": "color",
      "id": "highlight_color",
      "label": "Highlight color",
      "default": "#2BB4A7"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading size (px)",
      "min": 24,
      "max": 80,
      "step": 1,
      "default": 56
    },
    {
      "type": "select",
      "id": "heading_font_family",
      "label": "Heading font family",
      "default": "inherit",
      "options": [
        { "value": "inherit", "label": "Theme default" },
        { "value": "heading", "label": "Heading font" },
        { "value": "body", "label": "Body font" }
      ]
    },
    {
      "type": "select",
      "id": "heading_font_weight",
      "label": "Heading font weight",
      "default": "inherit",
      "options": [
        { "value": "inherit", "label": "inherit" },
        { "value": "400", "label": "400" },
        { "value": "500", "label": "500" },
        { "value": "600", "label": "600" },
        { "value": "700", "label": "700" },
        { "value": "800", "label": "800" }
      ]
    },
    {
      "type": "richtext",
      "id": "body_text",
      "label": "Body text",
      "default": "<p>Kefey\u00ae is a daily wellness ritual in the form of star-shaped gummies designed to make feeling good feel lighter.</p>"
    },
    {
      "type": "text",
      "id": "accent_text",
      "label": "Accent text",
      "default": "Kefey\u00ae began with a simple question:"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent color",
      "default": "#E15241"
    },
    {
      "type": "range",
      "id": "body_font_size",
      "label": "Body font size (px)",
      "min": 12,
      "max": 40,
      "step": 1,
      "default": 18
    },
    {
      "type": "select",
      "id": "text_font_family",
      "label": "Body font family",
      "default": "inherit",
      "options": [
        { "value": "inherit", "label": "Theme default" },
        { "value": "heading", "label": "Heading font" },
        { "value": "body", "label": "Body font" }
      ]
    },
    {
      "type": "select",
      "id": "text_font_weight",
      "label": "Body font weight",
      "default": "inherit",
      "options": [
        { "value": "inherit", "label": "inherit" },
        { "value": "400", "label": "400" },
        { "value": "500", "label": "500" },
        { "value": "600", "label": "600" },
        { "value": "700", "label": "700" },
        { "value": "800", "label": "800" }
      ]
    },
    {
      "type": "range",
      "id": "accent_font_size",
      "label": "Accent font size (px)",
      "min": 12,
      "max": 40,
      "step": 1,
      "default": 22
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top (px)",
      "min": 0,
      "max": 160,
      "step": 4,
      "default": 52
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom (px)",
      "min": 0,
      "max": 160,
      "step": 4,
      "default": 56
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Content max width (px)",
      "min": 480,
      "max": 1400,
      "step": 10,
      "default": 880
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Our Story Intro"
    }
  ]
}
{% endschema %}
