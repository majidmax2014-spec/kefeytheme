{{ 'what-if-wellness.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign wiw_h_ff = 'inherit'
  if section.settings.heading_font_family == 'heading'
    assign wiw_h_ff = 'var(--font-heading-family)'
  elsif section.settings.heading_font_family == 'body'
    assign wiw_h_ff = 'var(--font-body-family)'
  endif

  assign wiw_t_ff = 'inherit'
  if section.settings.text_font_family == 'heading'
    assign wiw_t_ff = 'var(--font-heading-family)'
  elsif section.settings.text_font_family == 'body'
    assign wiw_t_ff = 'var(--font-body-family)'
  endif
-%}

<section
  id="WhatIfWellness-{{ section.id }}"
  class="what-if-wellness"
  style="
    --wiw-bg: {{ section.settings.bg_color }};
    --wiw-bar-bg: {{ section.settings.title_bar_color }};
    --wiw-heading-color: {{ section.settings.heading_color }};
    --wiw-text-color: {{ section.settings.text_color }};
    --wiw-max: {{ section.settings.content_max_width }}px;
    --wiw-left-col: {{ section.settings.left_col_width }}%;
    --wiw-pt: {{ section.settings.padding_top }}px;
    --wiw-pb: {{ section.settings.padding_bottom }}px;
    --wiw-left-w: {{ section.settings.left_decor_width }}px;
    --wiw-left-x: {{ section.settings.left_decor_x }}px;
    --wiw-left-y: {{ section.settings.left_decor_y }}px;
    --wiw-r1-w: {{ section.settings.right_decor_width_1 }}px;
    --wiw-r1-x: {{ section.settings.right_decor_x_1 }}px;
    --wiw-r1-y: {{ section.settings.right_decor_y_1 }}px;
    --wiw-r2-w: {{ section.settings.right_decor_width_2 }}px;
    --wiw-r2-x: {{ section.settings.right_decor_x_2 }}px;
    --wiw-r2-y: {{ section.settings.right_decor_y_2 }}px;
    --wiw-h-ff: {{ wiw_h_ff }};
    --wiw-h-fw: {{ section.settings.heading_font_weight }};
    --wiw-h-fs: {{ section.settings.heading_font_size }}px;
    --wiw-t-ff: {{ wiw_t_ff }};
    --wiw-t-fw: {{ section.settings.text_font_weight }};
    --wiw-t-fs: {{ section.settings.text_font_size }}px;
  "
>
  <div class="what-if-wellness__inner">
    <div class="what-if-wellness__panel">
      <div class="what-if-wellness__titlebar">
        <h2 class="what-if-wellness__heading">{{ section.settings.heading }}</h2>
      </div>

      <div class="what-if-wellness__grid">
        <div class="what-if-wellness__left">
          {% if section.settings.intro != blank %}
            <div class="what-if-wellness__intro rte">{{ section.settings.intro }}</div>
          {% endif %}
          {% if section.settings.bullets != blank %}
            <div class="what-if-wellness__bullets rte">{{ section.settings.bullets }}</div>
          {% endif %}
        </div>

        <div class="what-if-wellness__right">
          {% if section.settings.right_image != blank %}
            {{
              section.settings.right_image
              | image_url: width: 1400
              | image_tag:
                class: 'what-if-wellness__product-image',
                loading: 'lazy',
                widths: '300, 500, 700, 900, 1100, 1400',
                sizes: '(max-width: 989px) 70vw, 36vw',
                alt: section.settings.right_image.alt
            }}
          {% endif %}
        </div>
      </div>

      {% if section.settings.show_left_decor and section.settings.left_decor_image != blank %}
        <div class="what-if-wellness__decor what-if-wellness__decor--left" aria-hidden="true">
          {{ section.settings.left_decor_image | image_url: width: 800 | image_tag: loading: 'lazy', alt: '' }}
        </div>
      {% endif %}

      {% if section.settings.show_right_decor %}
        {% if section.settings.right_decor_image_1 != blank %}
          <div class="what-if-wellness__decor what-if-wellness__decor--right-1" aria-hidden="true">
            {{ section.settings.right_decor_image_1 | image_url: width: 800 | image_tag: loading: 'lazy', alt: '' }}
          </div>
        {% else %}
          <div class="what-if-wellness__decor what-if-wellness__decor--right-1 what-if-wellness__decor--fallback-zigzag" aria-hidden="true"></div>
        {% endif %}
        {% if section.settings.right_decor_image_2 != blank %}
          <div class="what-if-wellness__decor what-if-wellness__decor--right-2" aria-hidden="true">
            {{ section.settings.right_decor_image_2 | image_url: width: 800 | image_tag: loading: 'lazy', alt: '' }}
          </div>
        {% else %}
          <div class="what-if-wellness__decor what-if-wellness__decor--right-2 what-if-wellness__decor--fallback-star" aria-hidden="true"></div>
        {% endif %}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "What If Wellness",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "What if wellness felt lighter?" },
    {
      "type": "richtext",
      "id": "intro",
      "label": "Intro",
      "default": "<p><strong>What if it didn't require more products, or endless routines, but instead focused on what truly mattered?</strong></p>"
    },
    {
      "type": "richtext",
      "id": "bullets",
      "label": "Bullets",
      "default": "<ul><li><strong>Kefey\u00ae was created from a clear belief:</strong><br>Self-care should be effective, intentional, and genuinely enjoyable.</li><li>That principle shaped our every decision - from choosing <strong>concentrated, premium extracts</strong> for faster, more meaningful results, to designing <strong>one focused ritual</strong> instead of many diluted ones, that we already know.</li><li>Because when wellness is thoughtful and well-crafted, <strong>less can truly be more.</strong></li></ul>"
    },
    { "type": "image_picker", "id": "right_image", "label": "Right image" },
    { "type": "color", "id": "bg_color", "label": "Background color", "default": "#36B2B2" },
    { "type": "color", "id": "title_bar_color", "label": "Title bar color", "default": "#F8CB34" },
    { "type": "color", "id": "heading_color", "label": "Heading color", "default": "#FFFFFF" },
    { "type": "color", "id": "text_color", "label": "Text color", "default": "#FFFFFF" },
    {
      "type": "select",
      "id": "heading_font_family",
      "label": "Heading font family",
      "default": "inherit",
      "options": [
        { "value": "inherit", "label": "Theme default" },
        { "value": "heading", "label": "Heading font" },
        { "value": "body", "label": "Body font" }
      ]
    },
    {
      "type": "select",
      "id": "heading_font_weight",
      "label": "Heading font weight",
      "default": "inherit",
      "options": [
        { "value": "inherit", "label": "inherit" },
        { "value": "400", "label": "400" },
        { "value": "500", "label": "500" },
        { "value": "600", "label": "600" },
        { "value": "700", "label": "700" },
        { "value": "800", "label": "800" }
      ]
    },
    { "type": "range", "id": "heading_font_size", "label": "Heading font size", "min": 16, "max": 96, "step": 2, "default": 48 },
    {
      "type": "select",
      "id": "text_font_family",
      "label": "Body font family",
      "default": "inherit",
      "options": [
        { "value": "inherit", "label": "Theme default" },
        { "value": "heading", "label": "Heading font" },
        { "value": "body", "label": "Body font" }
      ]
    },
    {
      "type": "select",
      "id": "text_font_weight",
      "label": "Body font weight",
      "default": "inherit",
      "options": [
        { "value": "inherit", "label": "inherit" },
        { "value": "400", "label": "400" },
        { "value": "500", "label": "500" },
        { "value": "600", "label": "600" },
        { "value": "700", "label": "700" },
        { "value": "800", "label": "800" }
      ]
    },
    { "type": "range", "id": "text_font_size", "label": "Body font size", "min": 10, "max": 32, "step": 1, "default": 18 },
    { "type": "range", "id": "content_max_width", "label": "Content max width", "min": 900, "max": 1600, "step": 10, "default": 1220 },
    { "type": "range", "id": "left_col_width", "label": "Left column width (%)", "min": 45, "max": 70, "step": 1, "default": 60 },
    { "type": "range", "id": "padding_top", "label": "Padding top", "min": 0, "max": 200, "step": 4, "default": 12 },
    { "type": "range", "id": "padding_bottom", "label": "Padding bottom", "min": 0, "max": 200, "step": 4, "default": 12 },

    { "type": "checkbox", "id": "show_left_decor", "label": "Show left decor", "default": true },
    { "type": "image_picker", "id": "left_decor_image", "label": "Left decor image" },
    { "type": "range", "id": "left_decor_width", "label": "Left decor width", "min": 40, "max": 500, "step": 10, "default": 220 },
    { "type": "range", "id": "left_decor_x", "label": "Left decor X", "min": -400, "max": 400, "step": 10, "default": -120 },
    { "type": "range", "id": "left_decor_y", "label": "Left decor Y", "min": -300, "max": 300, "step": 10, "default": 0 },

    { "type": "checkbox", "id": "show_right_decor", "label": "Show right decor", "default": true },
    { "type": "image_picker", "id": "right_decor_image_1", "label": "Right decor image 1" },
    { "type": "image_picker", "id": "right_decor_image_2", "label": "Right decor image 2" },
    { "type": "range", "id": "right_decor_width_1", "label": "Right decor 1 width", "min": 30, "max": 400, "step": 10, "default": 120 },
    { "type": "range", "id": "right_decor_x_1", "label": "Right decor 1 X", "min": -300, "max": 300, "step": 10, "default": -180 },
    { "type": "range", "id": "right_decor_y_1", "label": "Right decor 1 Y", "min": -300, "max": 300, "step": 10, "default": -120 },
    { "type": "range", "id": "right_decor_width_2", "label": "Right decor 2 width", "min": 20, "max": 260, "step": 10, "default": 80 },
    { "type": "range", "id": "right_decor_x_2", "label": "Right decor 2 X", "min": -300, "max": 300, "step": 10, "default": -120 },
    { "type": "range", "id": "right_decor_y_2", "label": "Right decor 2 Y", "min": -300, "max": 300, "step": 10, "default": 90 }
  ],
  "presets": [
    { "name": "What If Wellness" }
  ]
}
{% endschema %}
