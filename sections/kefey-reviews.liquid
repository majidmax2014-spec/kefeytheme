{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .kefey-reviews__title {
    text-align: center;
    margin-bottom: 2.4rem;
  }
  .kefey-underline {
    position: relative;
    display: inline-block;
    padding-bottom: 1rem;
  }
  .kefey-underline::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    height: 0.6rem;
    bottom: 0.15rem;
    background: #E61D2E; /* red accent underline */
  }

  .kefey-reviews__slider {
    margin-top: 1.6rem;
  }

  .kefey-review-card {
    background: #eeeeee;
    padding: 2.4rem;
    min-height: 28rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    text-align: center;
    border-radius: 0.4rem;
  }
  .kefey-review-text {
    color: rgb(var(--color-foreground));
    line-height: 1.6;
  }
  .kefey-stars {
    display: flex;
    gap: 0.6rem;
    justify-content: center;
    margin-top: 1.6rem;
  }
  .kefey-stars .svg-wrapper,
  .kefey-stars svg {
    width: 2.2rem;
    height: 2.2rem;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} isolate gradient">
  <div class="section-{{ section.id }}-padding">
    {%- if section.settings.title != blank -%}
      <div class="kefey-reviews__title page-width">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">
          <span class="kefey-underline">{{ section.settings.title }}</span>
        </h2>
        {%- if section.settings.subtitle != blank -%}
          <div class="subtitle rte">{{ section.settings.subtitle }}</div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- liquid
      assign show_mobile_slider = true
      assign show_desktop_slider = true
    -%}

    <slider-component class="slider-mobile-gutter{% if show_desktop_slider %} slider-component-desktop{% endif %} kefey-reviews__slider page-width">
      <ul
        id="Slider-{{ section.id }}"
        class="grid grid--4-col-desktop grid--2-col-tablet grid--1-col slider{% if show_desktop_slider %} slider--desktop{% endif %} slider--tablet"
        role="list"
        aria-label="{{ 'general.slider.name' | t }}"
      >
        {%- for block in section.blocks -%}
          <li class="grid__item slider__slide" {{ block.shopify_attributes }}>
            <div class="kefey-review-card">
              <div class="kefey-review-text">
                {{ block.settings.text }}
              </div>
              <div class="kefey-stars">
                {%- for i in (1..block.settings.stars) -%}
                  <span class="svg-wrapper">{{ 'icon-star.svg' | inline_asset_content }}</span>
                {%- endfor -%}
              </div>
            </div>
          </li>
        {%- endfor -%}
      </ul>

      <div class="slider-buttons">
        <button
          type="button"
          class="slider-button slider-button--prev"
          name="previous"
          aria-label="{{ 'general.slider.previous_slide' | t }}"
          aria-controls="Slider-{{ section.id }}"
        >
          <span class="svg-wrapper">{{- 'icon-caret.svg' | inline_asset_content -}}</span>
        </button>
        <div class="slider-counter slider-counter--dots">
          <div class="slideshow__control-wrapper">
            {%- for block in section.blocks -%}
              <button
                class="slider-counter__link slider-counter__link--dots link"
                aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                aria-controls="Slider-{{ section.id }}"
              >
                <span class="dot"></span>
              </button>
            {%- endfor -%}
          </div>
        </div>
        <button
          type="button"
          class="slider-button slider-button--next"
          name="next"
          aria-label="{{ 'general.slider.next_slide' | t }}"
          aria-controls="Slider-{{ section.id }}"
        >
          <span class="svg-wrapper">{{- 'icon-caret.svg' | inline_asset_content -}}</span>
        </button>
      </div>
    </slider-component>
  </div>
</div>

{% schema %}
{
  "name": "Kefey reviews",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "inline_richtext", "id": "title", "label": "Title", "default": "Over 1,000,000+ Reviews from Happy Customers." },
    { "type": "inline_richtext", "id": "subtitle", "label": "Subtitle" },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "H2" },
        { "value": "h1", "label": "H1" },
        { "value": "h0", "label": "Hero" }
      ],
      "default": "h0",
      "label": "Heading size"
    },
    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-1" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding top", "default": 36 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding bottom", "default": 36 }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        { "type": "richtext", "id": "text", "label": "Review text", "default": "<p>I\u2019m officially hooked! These are SUPER convenient and delicious. Game changer to my daily health routine.</p>" },
        { "type": "range", "id": "stars", "label": "Stars", "min": 1, "max": 5, "step": 1, "default": 5 }
      ]
    }
  ],
  "max_blocks": 16,
  "presets": [
    {
      "name": "Kefey reviews",
      "blocks": [
        { "type": "review" },
        { "type": "review" },
        { "type": "review" },
        { "type": "review" }
      ]
    }
  ]
}
{% endschema %}


