{{ 'component-list-social.css' | asset_url | stylesheet_tag }}
{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .kefey-footer__top {
    display: grid;
    gap: 3rem;
    align-items: start;
  }
  @media screen and (min-width: 990px) {
    .kefey-footer__top {
      grid-template-columns: 1.4fr 1.2fr 0.8fr;
      gap: 4rem;
    }
  }
  .kefey-footer__heading {
    font-weight: 800;
    font-size: 2.2rem;
    margin: 0 0 1rem 0;
  }
  .kefey-footer__newsletter .field__button {
    background: transparent;
    border: .2rem solid currentColor;
    border-radius: 0;
  }
  .kefey-footer__links a {
    display: block;
    padding: .5rem 0;
    text-decoration: none;
  }
  .kefey-footer__brand-logos img {
    max-width: 160px;
    height: auto;
    display: block;
    margin-left: auto;
    margin-bottom: 1.6rem;
  }
  .kefey-footer__legal {
    border-top: 1px solid rgba(var(--color-foreground), .25);
    margin-top: 3rem;
    padding-top: 1.6rem;
  }
  .kefey-footer__legal-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1.6rem;
    justify-content: center;
  }
  .kefey-footer__fine {
    opacity: .85;
    font-size: 1.2rem;
    line-height: 1.6;
    margin-top: 1.6rem;
  }
  .kefey-footer__copy {
    text-align: center;
    margin-top: 1.6rem;
    opacity: .85;
  }
{%- endstyle -%}

{%- liquid
  assign has_social_icons = true
  if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
    assign has_social_icons = false
  endif
-%}

<footer class="color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="kefey-footer__top">
      <div>
        <h2 class="kefey-footer__heading">{{ section.settings.newsletter_heading }}</h2>
        <p class="rte">{{ section.settings.newsletter_subtext }}</p>
        {%- form 'customer', id: 'KefeyFooterNewsletter', class: 'newsletter-form kefey-footer__newsletter' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="newsletter-form__field-wrapper">
            <div class="field">
              <input
                id="NewsletterEmail--{{ section.id }}"
                type="email"
                name="contact[email]"
                class="field__input"
                value="{{ form.email }}"
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                placeholder="Email"
                required
              >
              <label class="field__label" for="NewsletterEmail--{{ section.id }}">Email</label>
              <button type="submit" class="newsletter-form__button field__button" aria-label="Subscribe">
                <span class="svg-wrapper">{{- 'icon-arrow.svg' | inline_asset_content -}}</span>
              </button>
            </div>
          </div>
          {%- if form.errors -%}
            <small class="newsletter-form__message form__message">
              <span class="svg-wrapper">{{- 'icon-error.svg' | inline_asset_content -}}</span>
              {{ form.errors.messages.email }}
            </small>
          {%- endif -%}
          {%- if form.posted_successfully? -%}
            <h3 class="newsletter-form__message newsletter-form__message--success form__message" tabindex="-1" autofocus>
              <span class="svg-wrapper">{{- 'icon-success.svg' | inline_asset_content -}}</span>
              Thanks for subscribing
            </h3>
          {%- endif -%}
        {%- endform -%}

        {%- if section.settings.show_social and has_social_icons -%}
          <div style="margin-top: 1.2rem;">
            <div class="caption">FOLLOW US:</div>
            {%- render 'social-icons', class: '' -%}
          </div>
        {%- endif -%}
      </div>

      <div class="kefey-footer__links">
        {%- if section.settings.menu != blank -%}
          {%- for link in section.settings.menu.links -%}
            <a href="{{ link.url }}" class="link link--text">{{ link.title | escape }}</a>
          {%- endfor -%}
        {%- endif -%}
      </div>

      <div class="kefey-footer__brand-logos">
        {%- if section.settings.brand_logo != blank -%}
          {{ section.settings.brand_logo | image_url: width: 300 | image_tag: loading: 'lazy' }}
        {%- endif -%}
        {%- if section.settings.cert_logo != blank -%}
          {{ section.settings.cert_logo | image_url: width: 120 | image_tag: loading: 'lazy' }}
        {%- endif -%}
      </div>
    </div>

    <div class="kefey-footer__legal">
      <div class="kefey-footer__legal-links">
        {%- if section.settings.link_1_label != blank and section.settings.link_1_url != blank -%}
          <a class="link link--text" href="{{ section.settings.link_1_url }}">{{ section.settings.link_1_label }}</a>
        {%- endif -%}
        {%- if section.settings.link_2_label != blank and section.settings.link_2_url != blank -%}
          <a class="link link--text" href="{{ section.settings.link_2_url }}">{{ section.settings.link_2_label }}</a>
        {%- endif -%}
        {%- if section.settings.link_3_label != blank and section.settings.link_3_url != blank -%}
          <a class="link link--text" href="{{ section.settings.link_3_url }}">{{ section.settings.link_3_label }}</a>
        {%- endif -%}
        {%- if section.settings.link_4_label != blank and section.settings.link_4_url != blank -%}
          <a class="link link--text" href="{{ section.settings.link_4_url }}">{{ section.settings.link_4_label }}</a>
        {%- endif -%}
      </div>
      {%- if section.settings.disclaimer != blank -%}
        <div class="kefey-footer__fine rte">{{ section.settings.disclaimer }}</div>
      {%- endif -%}
      {%- if section.settings.footnotes != blank -%}
        <div class="kefey-footer__fine rte">{{ section.settings.footnotes }}</div>
      {%- endif -%}
      <div class="kefey-footer__copy">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All Rights Reserved.
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Kefey footer",
  "settings": [
    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-4" },
    { "type": "inline_richtext", "id": "newsletter_heading", "label": "Newsletter heading", "default": "Keep well with Goli" },
    { "type": "richtext", "id": "newsletter_subtext", "label": "Newsletter subtext", "default": "<p>Subscribe to our newsletter for exclusive offers!</p>" },
    { "type": "checkbox", "id": "show_social", "label": "Show social icons", "default": true },
    { "type": "link_list", "id": "menu", "label": "Links menu" },
    { "type": "image_picker", "id": "brand_logo", "label": "Brand logo (right column)" },
    { "type": "image_picker", "id": "cert_logo", "label": "Certification logo" },
    { "type": "text", "id": "link_1_label", "label": "Legal link 1 label", "default": "Terms & Conditions" },
    { "type": "url", "id": "link_1_url", "label": "Legal link 1 URL" },
    { "type": "text", "id": "link_2_label", "label": "Legal link 2 label", "default": "Privacy Policy" },
    { "type": "url", "id": "link_2_url", "label": "Legal link 2 URL" },
    { "type": "text", "id": "link_3_label", "label": "Legal link 3 label", "default": "Goli Rewards Gift Cards" },
    { "type": "url", "id": "link_3_url", "label": "Legal link 3 URL" },
    { "type": "text", "id": "link_4_label", "label": "Legal link 4 label", "default": "Digital Accessibility Statement" },
    { "type": "url", "id": "link_4_url", "label": "Legal link 4 URL" },
    { "type": "richtext", "id": "disclaimer", "label": "Disclaimer text" },
    { "type": "richtext", "id": "footnotes", "label": "Footnotes text" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding top", "default": 36 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding bottom", "default": 36 }
  ]
}
{% endschema %}


