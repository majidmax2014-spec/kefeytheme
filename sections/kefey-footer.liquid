>
  <div class="fk__row fk__row--top">
    <div class="fk__top-inner">
      <div class="fk__top-text-wrap">
        <h2 class="fk__top-heading">{{ section.settings.row1_heading }}</h2>
        <p class="fk__top-subheading">{{ section.settings.row1_subheading }}</p>
        {%- if section.settings.row1_button_label != blank -%}
          <a class="fk__top-btn" href="{{ section.settings.row1_button_link | default: '#' }}">
            {{ section.settings.row1_button_label }}
          </a>
        {%- endif -%}
      </div>
      <div class="fk__top-image-wrap">
        {%- if section.settings.kids_image != blank -%}
          {{
            section.settings.kids_image
            | image_url: width: 1600
            | image_tag:
              class: 'fk__kids-image',
              loading: 'lazy',
              widths: '320, 480, 640, 800, 1000, 1200, 1600',
              alt: section.settings.kids_image.alt
          }}
        {%- endif -%}
      </div>
    </div>
  </div>

  <div class="fk__row fk__row--impact">
    <div class="fk__impact-col fk__impact-col--left">
      {%- if section.settings.row2_left_logo != blank -%}
        {{
          section.settings.row2_left_logo
          | image_url: width: 700
          | image_tag: class: 'fk__impact-logo fk__impact-logo--left', loading: 'lazy', alt: section.settings.row2_left_logo.alt
        }}
      {%- endif -%}
      <div class="fk__impact-text">{{ section.settings.row2_left_text }}</div>
    </div>
    <div class="fk__impact-col fk__impact-col--right">
      {%- if section.settings.row2_right_logo != blank -%}
        {{
          section.settings.row2_right_logo
          | image_url: width: 700
          | image_tag:
            class: 'fk__impact-logo fk__impact-logo--right',
            loading: 'lazy',
            alt: section.settings.row2_right_logo.alt
        }}
      {%- endif -%}
      <div class="fk__impact-text">{{ section.settings.row2_right_text }}</div>
    </div>
  </div>

  <div class="fk__row fk__row--main">
    <div class="fk__main-inner">
      <div class="fk__main-grid">
        <div class="fk__col fk__col--newsletter">
          <h3 class="fk__newsletter-heading">{{ section.settings.newsletter_heading }}</h3>
          <p class="fk__newsletter-text">{{ section.settings.newsletter_text }}</p>
          {%- form 'customer', id: 'FooterNewsletter-'.append(section.id), class: 'fk__newsletter-form' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <label class="visually-hidden" for="FooterEmail-{{ section.id }}">Email</label>
            <div class="fk__newsletter-field">
              <input
                id="FooterEmail-{{ section.id }}"
                type="email"
                name="contact[email]"
                value="{{ form.email }}"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                placeholder="{{ section.settings.newsletter_placeholder }}"
                required
              >
              <button type="submit" aria-label="{{ section.settings.newsletter_button_label }}">
                {{ section.settings.newsletter_button_label }}
                <span aria-hidden="true">&rarr;</span>
              </button>
            </div>
            {%- if form.errors -%}
              <small class="fk__newsletter-note fk__newsletter-note--error">{{ form.errors.messages.email }}</small>
            {%- endif -%}
            {%- if form.posted_successfully? -%}
              <small class="fk__newsletter-note fk__newsletter-note--success">{{ 'newsletter.success' | t }}</small>
            {%- endif -%}
          {%- endform -%}

          <div class="fk__social-wrap">
            <div class="fk__social-label">{{ section.settings.social_label }}</div>
            <div class="fk__social-list">
              {%- if section.settings.tiktok_url != blank -%}
                <a href="{{ section.settings.tiktok_url }}" class="fk__social-item" target="_blank" rel="noopener" aria-label="TikTok">
                  {%- if section.settings.tiktok_icon != blank -%}
                    {{ section.settings.tiktok_icon | image_url: width: 64 | image_tag: loading: 'lazy', alt: '' }}
                  {%- else -%}
                    <span>T</span>
                  {%- endif -%}
                </a>
              {%- endif -%}
              {%- if section.settings.snapchat_url != blank -%}
                <a href="{{ section.settings.snapchat_url }}" class="fk__social-item" target="_blank" rel="noopener" aria-label="Snapchat">
                  {%- if section.settings.snapchat_icon != blank -%}
                    {{ section.settings.snapchat_icon | image_url: width: 64 | image_tag: loading: 'lazy', alt: '' }}
                  {%- else -%}
                    <span>S</span>
                  {%- endif -%}
                </a>
              {%- endif -%}
              {%- if section.settings.instagram_url != blank -%}
                <a
                  href="{{ section.settings.instagram_url }}"
                  class="fk__social-item"
                  target="_blank"
                  rel="noopener"
                  aria-label="Instagram"
                >
                  {%- if section.settings.instagram_icon != blank -%}
                    {{ section.settings.instagram_icon | image_url: width: 64 | image_tag: loading: 'lazy', alt: '' }}
                  {%- else -%}
                    <span>I</span>
                  {%- endif -%}
                </a>
              {%- endif -%}
            </div>
          </div>
        </div>

        <div class="fk__col fk__col--links">
          {%- if section.settings.menu_primary != blank -%}
            <ul class="fk__menu" role="list">
              {%- for link in section.settings.menu_primary.links -%}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>

        <div class="fk__col fk__col--brand">
          {%- if section.settings.brand_logo != blank -%}
            {{
              section.settings.brand_logo
              | image_url: width: 800
              | image_tag: class: 'fk__brand-logo', loading: 'lazy', alt: section.settings.brand_logo.alt
            }}
          {%- endif -%}
          {%- if section.settings.cert_logo != blank -%}
            {{
              section.settings.cert_logo
              | image_url: width: 400
              | image_tag: class: 'fk__cert-logo', loading: 'lazy', alt: section.settings.cert_logo.alt
            }}
          {%- endif -%}
        </div>
      </div>

      {%- if section.settings.menu_policies != blank -%}
        <ul class="fk__policy-menu" role="list">
          {%- for link in section.settings.menu_policies.links -%}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {%- endfor -%}
        </ul>
      {%- endif -%}

      <div class="fk__disclaimer-box">
        {{ section.settings.disclaimer_text }}
      </div>
    </div>
  </div>
</footer>

