<footer
  id="FooterKefey-{{ section.id }}"
  class="fk"
  style="
    --fk-max: {{ section.settings.content_max_width }}px;
    --fk-row1-bg: {{ section.settings.row1_bg }};
    --fk-row2-left-bg: {{ section.settings.row2_left_bg }};
    --fk-row2-right-bg: {{ section.settings.row2_right_bg }};
    --fk-row3-bg: {{ section.settings.row3_bg }};
    --fk-row1-h: {{ section.settings.row1_height_desktop }}px;
    --fk-row1-hm: {{ section.settings.row1_height_mobile }}px;
    --fk-row2-h: {{ section.settings.row2_height_desktop }}px;
    --fk-kids-size: {{ section.settings.kids_image_width }}px;
    --fk-kids-x: {{ section.settings.kids_offset_x }}px;
    --fk-kids-y: {{ section.settings.kids_offset_y }}px;
    --fk-row2-left-logo-w: {{ section.settings.row2_left_logo_width }}px;
    --fk-row2-right-logo-w: {{ section.settings.row2_right_logo_width }}px;
    --fk-brand-logo-w: {{ section.settings.brand_logo_width }}px;
    --fk-cert-logo-w: {{ section.settings.cert_logo_width }}px;
    --ff-top-heading-fs: {{ section.settings.ff_top_heading_fs }}px;
    --ff-top-subheading-fs: {{ section.settings.ff_top_subheading_fs }}px;
    --ff-top-btn-fs: {{ section.settings.ff_top_btn_fs }}px;
    --ff-mid-text-fs: {{ section.settings.ff_mid_text_fs }}px;
    --ff-newsletter-heading-fs: {{ section.settings.ff_newsletter_heading_fs }}px;
    --ff-newsletter-text-fs: {{ section.settings.ff_newsletter_text_fs }}px;
    --ff-input-fs: {{ section.settings.ff_input_fs }}px;
    --ff-menu-links-fs: {{ section.settings.ff_menu_links_fs }}px;
    --ff-policy-links-fs: {{ section.settings.ff_policy_links_fs }}px;
    --ff-disclaimer-fs: {{ section.settings.ff_disclaimer_fs }}px;
    --ff-font-family: {{ ff_font_family_value }};
    --ff-font-weight: {{ section.settings.ff_font_weight }};
    --ff-top-btn-py: {{ section.settings.ff_top_btn_py }}px;
    --ff-top-btn-px: {{ section.settings.ff_top_btn_px }}px;
    --ff-top-btn-font-family: {{ ff_top_btn_font_family_value }};
    --ff-top-btn-font-weight: {{ section.settings.ff_top_btn_font_weight }};
    --ff-top-btn-bg: {{ section.settings.ff_top_btn_bg }};
    --ff-top-btn-text: {{ section.settings.ff_top_btn_text }};
    --ff-top-heading-ff: {{ ff_top_heading_ff_value }};
    --ff-top-heading-fw: {{ section.settings.ff_top_heading_fw }};
    --ff-top-subheading-ff: {{ ff_top_subheading_ff_value }};
    --ff-top-subheading-fw: {{ section.settings.ff_top_subheading_fw }};
    --ff-mid-text-ff: {{ ff_mid_text_ff_value }};
    --ff-mid-text-fw: {{ section.settings.ff_mid_text_fw }};
    --ff-newsletter-heading-ff: {{ ff_newsletter_heading_ff_value }};
    --ff-newsletter-heading-fw: {{ section.settings.ff_newsletter_heading_fw }};
