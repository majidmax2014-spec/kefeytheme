{%- liquid
  assign wsf_h_ff = ''
  if section.settings.heading_font_family == 'system'
    assign wsf_h_ff = "ui-sans-serif, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif"
  elsif section.settings.heading_font_family == 'heading'
    assign wsf_h_ff = 'var(--font-heading-family)'
  elsif section.settings.heading_font_family == 'body'
    assign wsf_h_ff = 'var(--font-body-family)'
  endif

  assign wsf_s_ff = ''
  if section.settings.subheading_font_family == 'system'
    assign wsf_s_ff = "ui-sans-serif, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif"
  elsif section.settings.subheading_font_family == 'heading'
    assign wsf_s_ff = 'var(--font-heading-family)'
  elsif section.settings.subheading_font_family == 'body'
    assign wsf_s_ff = 'var(--font-body-family)'
  endif

  assign wsf_l_ff = ''
  if section.settings.label_font_family == 'system'
    assign wsf_l_ff = "ui-sans-serif, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif"
  elsif section.settings.label_font_family == 'heading'
    assign wsf_l_ff = 'var(--font-heading-family)'
  elsif section.settings.label_font_family == 'body'
    assign wsf_l_ff = 'var(--font-body-family)'
  endif

  assign wsf_i_ff = ''
  if section.settings.input_font_family == 'system'
    assign wsf_i_ff = "ui-sans-serif, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif"
  elsif section.settings.input_font_family == 'heading'
    assign wsf_i_ff = 'var(--font-heading-family)'
  elsif section.settings.input_font_family == 'body'
    assign wsf_i_ff = 'var(--font-body-family)'
  endif

  assign wsf_b_ff = ''
  if section.settings.button_font_family == 'system'
    assign wsf_b_ff = "ui-sans-serif, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif"
  elsif section.settings.button_font_family == 'heading'
    assign wsf_b_ff = 'var(--font-heading-family)'
  elsif section.settings.button_font_family == 'body'
    assign wsf_b_ff = 'var(--font-body-family)'
  endif

  assign wsf_support_ff = ''
  if section.settings.support_font_family == 'system'
    assign wsf_support_ff = "ui-sans-serif, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif"
  elsif section.settings.support_font_family == 'heading'
    assign wsf_support_ff = 'var(--font-heading-family)'
  elsif section.settings.support_font_family == 'body'
    assign wsf_support_ff = 'var(--font-body-family)'
  endif
-%}

<section
  id="wholesale-signup-form"
  class="wholesale-signup-form"
  style="
    --wsf-heading-fs: {{ section.settings.heading_font_size }}px;
    --wsf-heading-fw: {{ section.settings.heading_font_weight }};
    --wsf-sub-fs: {{ section.settings.subheading_font_size }}px;
    --wsf-sub-fw: {{ section.settings.subheading_font_weight }};
    --wsf-label-fs: {{ section.settings.label_font_size }}px;
    --wsf-label-fw: {{ section.settings.label_font_weight }};
    --wsf-input-fs: {{ section.settings.input_font_size }}px;
    --wsf-input-fw: {{ section.settings.input_font_weight }};
    --wsf-button-fs: {{ section.settings.button_font_size }}px;
    --wsf-button-fw: {{ section.settings.button_font_weight }};
    --wsf-support-fs: {{ section.settings.support_font_size }}px;
    --wsf-support-fw: {{ section.settings.support_font_weight }};
    {% if wsf_h_ff != blank %}--wsf-heading-ff: {{ wsf_h_ff }};{% endif %}
    {% if wsf_s_ff != blank %}--wsf-sub-ff: {{ wsf_s_ff }};{% endif %}
    {% if wsf_l_ff != blank %}--wsf-label-ff: {{ wsf_l_ff }};{% endif %}
    {% if wsf_i_ff != blank %}--wsf-input-ff: {{ wsf_i_ff }};{% endif %}
    {% if wsf_b_ff != blank %}--wsf-button-ff: {{ wsf_b_ff }};{% endif %}
    {% if wsf_support_ff != blank %}--wsf-support-ff: {{ wsf_support_ff }};{% endif %}
  "
>
  <div class="wholesale-signup-form__container page-width">
    <div class="wholesale-signup-form__header">
      <h2 class="wholesale-signup-form__title">
        <span class="wholesale-signup-form__title-text">{{ section.settings.heading }}</span>
        <span class="wholesale-signup-form__title-highlight" aria-hidden="true"></span>
      </h2>
      {%- if section.settings.subheading_line_1 != blank -%}
        <p class="wholesale-signup-form__subheading wholesale-signup-form__subheading--primary">{{ section.settings.subheading_line_1 }}</p>
      {%- endif -%}
      {%- if section.settings.subheading_line_2 != blank -%}
        <p class="wholesale-signup-form__subheading">{{ section.settings.subheading_line_2 }}</p>
      {%- endif -%}
    </div>

    {%- form 'contact', id: 'WholesaleSignUpForm', class: 'wholesale-signup-form__form' -%}
      {%- if form.errors -%}
        <div class="wholesale-signup-form__message wholesale-signup-form__message--error" role="alert" tabindex="-1" autofocus>
          {{ form.errors | default_errors }}
        </div>
      {%- endif -%}

      <input type="hidden" name="contact[topic]" value="{{ section.settings.submission_topic }}">

      <div class="wholesale-signup-form__grid">
        <div class="wholesale-signup-form__field">
          <label class="wholesale-signup-form__label" for="WholesaleName-{{ section.id }}">Personal Name</label>
          <input
            id="WholesaleName-{{ section.id }}"
            class="wholesale-signup-form__input js-wholesale-validate"
            type="text"
            name="contact[name]"
            value="{% if form.name %}{{ form.name }}{% endif %}"
            data-required="true"
            data-error-id="WholesaleNameError-{{ section.id }}"
            required
          >
          <p id="WholesaleNameError-{{ section.id }}" class="wholesale-signup-form__field-error" aria-live="polite"></p>
        </div>

        <div class="wholesale-signup-form__field">
          <label class="wholesale-signup-form__label" for="WholesaleCompany-{{ section.id }}">Company Name</label>
          <input
            id="WholesaleCompany-{{ section.id }}"
            class="wholesale-signup-form__input js-wholesale-validate"
            type="text"
            name="contact[company]"
            value="{% if form.company %}{{ form.company }}{% endif %}"
            data-required="true"
            data-error-id="WholesaleCompanyError-{{ section.id }}"
            required
          >
          <p id="WholesaleCompanyError-{{ section.id }}" class="wholesale-signup-form__field-error" aria-live="polite"></p>
        </div>

        <div class="wholesale-signup-form__field">
          <label class="wholesale-signup-form__label" for="WholesaleEmail-{{ section.id }}">Email Address</label>
          <input
            id="WholesaleEmail-{{ section.id }}"
            class="wholesale-signup-form__input js-wholesale-validate"
            type="email"
            name="contact[email]"
            value="{% if form.email %}{{ form.email }}{% endif %}"
            autocorrect="off"
            autocapitalize="off"
            data-required="true"
            data-email="true"
            data-error-id="WholesaleEmailError-{{ section.id }}"
            required
          >
          <p id="WholesaleEmailError-{{ section.id }}" class="wholesale-signup-form__field-error" aria-live="polite"></p>
        </div>

        <div class="wholesale-signup-form__field">
          <label class="wholesale-signup-form__label" for="WholesalePhone-{{ section.id }}">Phone Number</label>
          <input
            id="WholesalePhone-{{ section.id }}"
            class="wholesale-signup-form__input js-wholesale-validate"
            type="tel"
            name="contact[phone]"
            value="{% if form.phone %}{{ form.phone }}{% endif %}"
            data-error-id="WholesalePhoneError-{{ section.id }}"
          >
          <p id="WholesalePhoneError-{{ section.id }}" class="wholesale-signup-form__field-error" aria-live="polite"></p>
        </div>

        <div class="wholesale-signup-form__field wholesale-signup-form__field--select">
          <label class="wholesale-signup-form__label" for="WholesaleBusinessType-{{ section.id }}">Business Type</label>
          {%- assign type_options = section.settings.business_type_options | split: ',' -%}
          {%- assign selected_type = form.business_type | default: '' -%}
          <select
            id="WholesaleBusinessType-{{ section.id }}"
            class="wholesale-signup-form__input wholesale-signup-form__select js-wholesale-validate"
            name="contact[business_type]"
            data-required="true"
            data-error-id="WholesaleBusinessTypeError-{{ section.id }}"
            required
          >
            <option value="" {% if selected_type == '' %}selected{% endif %} disabled>Select business type</option>
            {%- for option in type_options -%}
              {%- assign option_trimmed = option | strip -%}
              {%- if option_trimmed != blank -%}
                <option value="{{ option_trimmed }}" {% if selected_type == option_trimmed %}selected{% endif %}>
                  {{ option_trimmed }}
                </option>
              {%- endif -%}
            {%- endfor -%}
          </select>
          <p id="WholesaleBusinessTypeError-{{ section.id }}" class="wholesale-signup-form__field-error" aria-live="polite"></p>
        </div>

        <div class="wholesale-signup-form__field">
          <label class="wholesale-signup-form__label" for="WholesaleVolume-{{ section.id }}">Estimated Order Volume</label>
          <input
            id="WholesaleVolume-{{ section.id }}"
            class="wholesale-signup-form__input js-wholesale-validate"
            type="text"
            name="contact[estimated_order_volume]"
            value="{% if form.estimated_order_volume %}{{ form.estimated_order_volume }}{% endif %}"
            data-error-id="WholesaleVolumeError-{{ section.id }}"
          >
          <p id="WholesaleVolumeError-{{ section.id }}" class="wholesale-signup-form__field-error" aria-live="polite"></p>
        </div>

        <div class="wholesale-signup-form__field wholesale-signup-form__field--full">
          <label class="wholesale-signup-form__label" for="WholesaleDetails-{{ section.id }}">Tell us about your business &amp; why you'd like to partner with Kefey®</label>
          <textarea
            id="WholesaleDetails-{{ section.id }}"
            class="wholesale-signup-form__textarea js-wholesale-validate"
            name="contact[body]"
            rows="10"
            data-error-id="WholesaleDetailsError-{{ section.id }}"
          >{% if form.body %}{{ form.body }}{% endif %}</textarea>
          <p id="WholesaleDetailsError-{{ section.id }}" class="wholesale-signup-form__field-error" aria-live="polite"></p>
        </div>
      </div>

      <button type="submit" class="wholesale-signup-form__submit wholesale-form__submit button button--primary">
        {{ section.settings.button_label }}
      </button>

      {%- if form.posted_successfully? -%}
        <div class="wholesale-signup-form__message wholesale-signup-form__message--success wholesale-signup-form__message--under-button" tabindex="-1" autofocus>
          {{ section.settings.success_message }}
        </div>
      {%- endif -%}

      {%- if section.settings.show_recipient_note -%}
        <p class="wholesale-form__note wholesale-form__note--recipient">
          Submissions are sent to the store notification email in Shopify Settings → Notifications. For routing to
          {{ section.settings.recipient_note_email }}, use Shopify Flow or an app.
        </p>
      {%- endif -%}

      {%- if section.settings.enable_autoresponder_note -%}
        <p class="wholesale-form__note wholesale-form__note--autoresponder">
          Theme code can’t send emails. To send an automatic thank-you email, use Shopify Flow/Shopify Email or a form app.
        </p>
      {%- endif -%}
      {%- if form.posted_successfully? and section.settings.success_redirect_url != blank -%}
        <script>
          setTimeout(function () {
            window.location.href = {{ section.settings.success_redirect_url | json }};
          }, 800);
        </script>
      {%- endif -%}
    {%- endform -%}

    <p class="wholesale-signup-form__support">
      {{ section.settings.support_prefix }}
      <a href="mailto:{{ section.settings.support_email | escape }}" class="wholesale-signup-form__support-link">
        {{ section.settings.support_email }}
      </a>
    </p>
  </div>

  <style>
    #shopify-section-{{ section.id }} .wholesale-signup-form {
      background: #fff;
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__container {
      max-width: 1020px;
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__header {
      text-align: center;
      margin-bottom: 2.6rem;
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__title {
      margin: 0;
      display: inline-block;
      position: relative;
      line-height: 1.1;
      font-size: var(--wsf-heading-fs, 52px);
      font-weight: var(--wsf-heading-fw, 700);
      color: #111;
      {% if wsf_h_ff != blank %}
        font-family: var(--wsf-heading-ff);
      {% endif %}
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__title-text {
      position: relative;
      z-index: 1;
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__title-highlight {
      position: absolute;
      left: -0.3em;
      right: -0.3em;
      bottom: 0.16em;
      height: 0.34em;
      background: {{ section.settings.highlight_color }};
      z-index: 0;
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__subheading {
      margin: 0.2rem 0 0;
      font-size: var(--wsf-sub-fs, 20px);
      line-height: 1.35;
      color: #202020;
      font-weight: var(--wsf-sub-fw, 500);
      {% if wsf_s_ff != blank %}
        font-family: var(--wsf-sub-ff);
      {% endif %}
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__subheading--primary {
      margin-top: 1.4rem;
      font-weight: 700;
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__message {
      margin-bottom: 1.8rem;
      border-radius: 1.2rem;
      padding: 1rem 1.2rem;
      font-size: 1.5rem;
      line-height: 1.35;
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__message--under-button {
      margin-top: 1.2rem;
      margin-bottom: 0;
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__message--success {
      background: #e8f8ec;
      color: #1d7d3f;
      border: 1px solid #b9e4c8;
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__message--error {
      background: #fff0f0;
      color: #b22a2a;
      border: 1px solid #f2c3c3;
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__grid {
      display: grid;
      grid-template-columns: minmax(0, 1fr) minmax(0, 1fr);
      column-gap: 18px;
      row-gap: {{ section.settings.field_row_gap }}px;
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__field {
      position: relative;
      min-width: 0;
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__field--full {
      grid-column: 1 / -1;
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__label {
      position: absolute;
      top: -0.7rem;
      left: 2.2rem;
      background: #fff;
      padding: 0 0.8rem;
      font-size: var(--wsf-label-fs, 16px);
      line-height: 1;
      color: #1f1f1f;
      z-index: 1;
      pointer-events: none;
      font-weight: var(--wsf-label-fw, 400);
      {% if wsf_l_ff != blank %}
        font-family: var(--wsf-label-ff);
      {% endif %}
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__input,
    #shopify-section-{{ section.id }} .wholesale-signup-form__textarea {
      width: 100%;
      border: 1px solid {{ section.settings.border_color }};
      border-radius: 999px;
      background: #fff;
      color: #111;
      font-size: var(--wsf-input-fs, 18px);
      line-height: 1.3;
      padding: 1.6rem 2.2rem;
      box-sizing: border-box;
      box-shadow: none;
      font-weight: var(--wsf-input-fw, 400);
      {% if wsf_i_ff != blank %}
        font-family: var(--wsf-input-ff);
      {% endif %}
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__textarea {
      border-radius: 2.6rem;
      min-height: 260px;
      resize: vertical;
      padding-top: 2rem;
      padding-bottom: 2rem;
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__input:focus,
    #shopify-section-{{ section.id }} .wholesale-signup-form__textarea:focus {
      outline: none;
      border-color: {{ section.settings.accent_teal }};
      box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.03);
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__input.is-error,
    #shopify-section-{{ section.id }} .wholesale-signup-form__textarea.is-error {
      border-color: #d93025 !important;
      box-shadow: 0 0 0 1px rgba(217, 48, 37, 0.18);
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__field-error {
      margin: 0.55rem 0 0;
      min-height: 1.2em;
      font-size: 13px;
      line-height: 1.3;
      color: #d93025;
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__field--select {
      position: relative;
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__select {
      appearance: none;
      -webkit-appearance: none;
      -moz-appearance: none;
      padding-right: 4rem;
      cursor: pointer;
      background-image:
        linear-gradient(45deg, transparent 50%, #111 50%),
        linear-gradient(135deg, #111 50%, transparent 50%);
      background-position:
        calc(100% - 2.3rem) calc(50% - 2px),
        calc(100% - 1.7rem) calc(50% - 2px);
      background-size: 7px 7px, 7px 7px;
      background-repeat: no-repeat;
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__submit {
      margin-top: 2.2rem;
      width: 100%;
      min-height: 64px;
      border: 0 !important;
      outline: none !important;
      box-shadow: none !important;
      border-radius: 999px;
      background: {{ section.settings.accent_teal }};
      color: #fff;
      font-size: var(--wsf-button-fs, 40px);
      font-weight: var(--wsf-button-fw, 700);
      line-height: 1.1;
      cursor: pointer;
      {% if wsf_b_ff != blank %}
        font-family: var(--wsf-button-ff);
      {% endif %}
    }

    #shopify-section-{{ section.id }} .wholesale-form__submit::before {
      content: none !important;
      display: none !important;
    }

    #shopify-section-{{ section.id }} .wholesale-form__submit::after {
      content: none !important;
      display: none !important;
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__submit:hover {
      opacity: 0.95;
    }

    #shopify-section-{{ section.id }} .wholesale-form__note {
      margin: 1rem 0 0;
      font-size: 13px;
      line-height: 1.45;
      color: #666;
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__support {
      text-align: center;
      margin: 2.2rem 0 0;
      font-size: var(--wsf-support-fs, 40px);
      line-height: 1.3;
      color: #1b1b1b;
      font-weight: var(--wsf-support-fw, 400);
      {% if wsf_support_ff != blank %}
        font-family: var(--wsf-support-ff);
      {% endif %}
    }

    #shopify-section-{{ section.id }} .wholesale-signup-form__support-link {
      color: {{ section.settings.accent_teal }};
      text-decoration: underline;
      text-underline-offset: 3px;
      word-break: break-word;
    }

    @media screen and (max-width: 989px) {
      #shopify-section-{{ section.id }} .wholesale-signup-form {
        padding-top: calc({{ section.settings.padding_top }}px * 0.75);
        padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.75);
      }

      #shopify-section-{{ section.id }} .wholesale-signup-form__grid {
        grid-template-columns: 1fr;
      }

      #shopify-section-{{ section.id }} .wholesale-signup-form__title {
        font-size: var(--wsf-heading-fs, 52px);
      }

      #shopify-section-{{ section.id }} .wholesale-signup-form__subheading {
        font-size: var(--wsf-sub-fs, 20px);
      }

      #shopify-section-{{ section.id }} .wholesale-signup-form__input,
      #shopify-section-{{ section.id }} .wholesale-signup-form__textarea {
        font-size: var(--wsf-input-fs, 18px);
      }

      #shopify-section-{{ section.id }} .wholesale-signup-form__submit {
        font-size: var(--wsf-button-fs, 40px);
        min-height: 58px;
      }

      #shopify-section-{{ section.id }} .wholesale-signup-form__support {
        font-size: var(--wsf-support-fs, 40px);
      }
    }
  </style>

  <script>
    (function () {
      var root = document.getElementById('shopify-section-{{ section.id }}');
      if (!root) return;

      var form = root.querySelector('#WholesaleSignUpForm');
      if (!form) return;

      form.setAttribute('novalidate', 'novalidate');

      var fields = Array.prototype.slice.call(form.querySelectorAll('.js-wholesale-validate'));
      var emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

      function setError(field, message) {
        var errorId = field.getAttribute('data-error-id');
        var errorEl = errorId ? document.getElementById(errorId) : null;
        field.classList.add('is-error');
        field.setAttribute('aria-invalid', 'true');
        if (errorEl) {
          errorEl.textContent = message;
          field.setAttribute('aria-describedby', errorId);
        }
      }

      function clearError(field) {
        var errorId = field.getAttribute('data-error-id');
        var errorEl = errorId ? document.getElementById(errorId) : null;
        field.classList.remove('is-error');
        field.removeAttribute('aria-invalid');
        field.removeAttribute('aria-describedby');
        if (errorEl) errorEl.textContent = '';
      }

      function validateField(field) {
        var value = (field.value || '').trim();
        var isRequired = field.getAttribute('data-required') === 'true';
        var isEmail = field.getAttribute('data-email') === 'true';

        clearError(field);

        if (isRequired && value === '') {
          setError(field, 'This field is required.');
          return false;
        }

        if (isEmail && value !== '' && !emailPattern.test(value)) {
          setError(field, 'Please enter a valid email address.');
          return false;
        }

        return true;
      }

      fields.forEach(function (field) {
        var eventName = field.tagName.toLowerCase() === 'select' ? 'change' : 'input';
        field.addEventListener(eventName, function () {
          validateField(field);
        });
        field.addEventListener('blur', function () {
          validateField(field);
        });
      });

      form.addEventListener('submit', function (event) {
        var firstInvalid = null;
        var allValid = true;

        fields.forEach(function (field) {
          var valid = validateField(field);
          if (!valid && !firstInvalid) firstInvalid = field;
          if (!valid) allValid = false;
        });

        if (!allValid) {
          event.preventDefault();
          if (firstInvalid) firstInvalid.focus();
        }
      });

      {% if form.posted_successfully? %}
        try { form.reset(); } catch (e) {}
        fields.forEach(function (field) { clearError(field); });
      {% endif %}
    })();
  </script>
</section>

