{%- assign right_width = 100 | minus: section.settings.left_column_width_percent -%}
<section
  class="kefey-callouts"
  style="
    --kc-left-col: {{ section.settings.left_column_width_percent }}%;
    --kc-right-col: {{ right_width }}%;
    --kc-bg: {{ section.settings.section_bg_color }};
    --kc-teal: {{ section.settings.teal_box_color }};
    --kc-white-header: {{ section.settings.white_header_bg_color }};
    --kc-light-text: {{ section.settings.light_text_color }};
    --kc-dark-text: {{ section.settings.dark_text_color }};
    --kc-line-opacity: {{ section.settings.divider_line_opacity | divided_by: 100.0 }};
    --kc-box-radius: {{ section.settings.box_radius }}px;
    --kc-box-border-color: {{ section.settings.box_border_color }};
    --kc-box-border-w: {{ section.settings.box_border_thickness }}px;
    --kc-lh-ff: {{ section.settings.left_headline_font_family }};
    --kc-lh-fs-d: {{ section.settings.left_headline_font_size_desktop }}px;
    --kc-lh-fs-m: {{ section.settings.left_headline_font_size_mobile }}px;
    --kc-lh-fw: {{ section.settings.left_headline_font_weight }};
    --kc-lt-ff: {{ section.settings.left_text_font_family }};
    --kc-lt-fs-d: {{ section.settings.left_text_font_size_desktop }}px;
    --kc-lt-fs-m: {{ section.settings.left_text_font_size_mobile }}px;
    --kc-lt-fw: {{ section.settings.left_text_font_weight }};
    --kc-lt-lh: {{ section.settings.left_text_line_height }};
    --kc-b1h-ff: {{ section.settings.box1_heading_font_family }};
    --kc-b1h-fs-d: {{ section.settings.box1_heading_font_size_desktop }}px;
    --kc-b1h-fs-m: {{ section.settings.box1_heading_font_size_mobile }}px;
    --kc-b1h-fw: {{ section.settings.box1_heading_font_weight }};
    --kc-tbl-ff: {{ section.settings.table_font_family }};
    --kc-tbl-fs-d: {{ section.settings.table_font_size_desktop }}px;
    --kc-tbl-fs-m: {{ section.settings.table_font_size_mobile }}px;
    --kc-tbl-fw: {{ section.settings.table_font_weight }};
    --kc-tbl-lh: {{ section.settings.table_line_height }};
    --kc-b2t-ff: {{ section.settings.box2_title_font_family }};
    --kc-b2t-fs-d: {{ section.settings.box2_title_font_size_desktop }}px;
    --kc-b2t-fs-m: {{ section.settings.box2_title_font_size_mobile }}px;
    --kc-b2t-fw: {{ section.settings.box2_title_font_weight }};
    --kc-b2b-ff: {{ section.settings.box2_text_font_family }};
    --kc-b2b-fs-d: {{ section.settings.box2_text_font_size_desktop }}px;
    --kc-b2b-fs-m: {{ section.settings.box2_text_font_size_mobile }}px;
    --kc-b2b-fw: {{ section.settings.box2_text_font_weight }};
    --kc-b2b-lh: {{ section.settings.box2_text_line_height }};
    --kc-b3t-ff: {{ section.settings.box3_title_font_family }};
    --kc-b3t-fs-d: {{ section.settings.box3_title_font_size_desktop }}px;
    --kc-b3t-fs-m: {{ section.settings.box3_title_font_size_mobile }}px;
    --kc-b3t-fw: {{ section.settings.box3_title_font_weight }};
    --kc-b3b-ff: {{ section.settings.box3_text_font_family }};
    --kc-b3b-fs-d: {{ section.settings.box3_text_font_size_desktop }}px;
    --kc-b3b-fs-m: {{ section.settings.box3_text_font_size_mobile }}px;
    --kc-b3b-fw: {{ section.settings.box3_text_font_weight }};
    --kc-b3b-lh: {{ section.settings.box3_text_line_height }};
    --kc-bh-ff: {{ section.settings.bottom_heading_font_family }};
    --kc-bh-fs-d: {{ section.settings.bottom_heading_font_size_desktop }}px;
    --kc-bh-fs-m: {{ section.settings.bottom_heading_font_size_mobile }}px;
    --kc-bh-fw: {{ section.settings.bottom_heading_font_weight }};
    --kc-bt-ff: {{ section.settings.bottom_text_font_family }};
    --kc-bt-fs-d: {{ section.settings.bottom_text_font_size_desktop }}px;
    --kc-bt-fs-m: {{ section.settings.bottom_text_font_size_mobile }}px;
    --kc-bt-fw: {{ section.settings.bottom_text_font_weight }};
    --kc-bt-lh: {{ section.settings.bottom_text_line_height }};
  "
>
  <div class="page-width">
    <div class="kefey-callouts__grid">
      <div class="kefey-callouts__left">
        <div class="kefey-callouts__left-headline">{{ section.settings.left_headline }}</div>
        <p class="kefey-callouts__left-text">{{ section.settings.left_body }}</p>
        <div class="kefey-callouts__left-image-wrap">
          {%- if section.settings.left_image != blank -%}
            {{
              section.settings.left_image
              | image_url: width: 1400
              | image_tag:
                class: 'kefey-callouts__left-image',
                widths: '420, 700, 900, 1200, 1400',
                sizes: '(min-width: 990px) 42vw, 92vw',
                loading: 'lazy',
                alt: section.settings.left_headline
            }}
          {%- endif -%}
        </div>
      </div>

      <div class="kefey-callouts__right">
        <article class="kefey-callouts__box kefey-callouts__box--table">
          <div class="kefey-callouts__box1-header">{{ section.settings.box1_heading }}</div>
          <div class="kefey-callouts__box1-body">
            <div class="kefey-callouts__box1-amount">{{ section.settings.box1_amount_label }}</div>
            {%- for block in section.blocks -%}
              {%- if block.type == 'nutrition_row' -%}
                <div class="kefey-callouts__table-row" {{ block.shopify_attributes }}>
                  <span class="kefey-callouts__table-label">{{ block.settings.label }}</span>
                  <span class="kefey-callouts__table-value">{{ block.settings.value }}</span>
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </article>

        <article class="kefey-callouts__box kefey-callouts__box--blend">
          <div class="kefey-callouts__box-title-row">
            <h3 class="kefey-callouts__box-title">{{ section.settings.box2_title }}</h3>
            <span class="kefey-callouts__box-mg">{{ section.settings.box2_amount }}</span>
          </div>
          <p class="kefey-callouts__box-text">{{ section.settings.box2_body }}</p>
        </article>

        <article class="kefey-callouts__box kefey-callouts__box--other">
          <h3 class="kefey-callouts__box-title">{{ section.settings.box3_title }}</h3>
          <p class="kefey-callouts__box-text">{{ section.settings.box3_body }}</p>
        </article>

        <article class="kefey-callouts__bottom">
          <h3 class="kefey-callouts__bottom-heading">{{ section.settings.bottom_heading }}</h3>
          <p class="kefey-callouts__bottom-text">{{ section.settings.bottom_body }}</p>
        </article>
      </div>
    </div>
  </div>
</section>

