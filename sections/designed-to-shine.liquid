{{ 'designed-to-shine.css' | asset_url | stylesheet_tag }}

<section
  id="DesignedToShine-{{ section.id }}"
  class="designed-to-shine"
  style="
    --dts-bg: {{ section.settings.section_bg }};
    --dts-panel-bg: {{ section.settings.panel_bg }};
    --dts-title-bg: {{ section.settings.title_bg }};
    --dts-title-color: {{ section.settings.title_color }};
    --dts-sub-color: {{ section.settings.subtitle_color }};
    --dts-text-color: {{ section.settings.text_color }};
    --dts-max: {{ section.settings.content_max_width }}px;
    --dts-pt: {{ section.settings.padding_top }}px;
    --dts-pb: {{ section.settings.padding_bottom }}px;
    --dts-left: {{ section.settings.left_col_width }}%;
  "
>
  <div class="designed-to-shine__wrap">
    <div class="designed-to-shine__title-card">
      <h2 class="designed-to-shine__heading">{{ section.settings.heading }}</h2>
      {% if section.settings.subtitle != blank %}
        <div class="designed-to-shine__subtitle rte">{{ section.settings.subtitle }}</div>
      {% endif %}
    </div>

    <div class="designed-to-shine__panel">
      <div class="designed-to-shine__media">
        {% if section.settings.left_image != blank %}
          {{
            section.settings.left_image
            | image_url: width: 1600
            | image_tag:
              class: 'designed-to-shine__image',
              loading: 'lazy',
              widths: '380, 580, 760, 980, 1280, 1600',
              sizes: '(max-width: 989px) 100vw, 48vw',
              alt: section.settings.left_image.alt
          }}
        {% endif %}
      </div>
      <div class="designed-to-shine__content">
        {% if section.settings.text != blank %}
          <div class="designed-to-shine__text rte">{{ section.settings.text }}</div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Designed To Shine",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Designed to Shine" },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "<p>And just like that - Kefey was born.</p><p>Not a capsule. | A colorful, star-shaped spark. | Not a chore.</p>"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Right text",
      "default": "<ul><li>The star is not a decoration. It is a statement.</li><li>A symbol of focus, light, and confidence - and the belief that caring for yourself should help you shine from the inside out.</li><li>Each star-shaped gummy is crafted to deliver strength without heaviness, joy without compromise, and wellness that fits naturally into real life.</li><li><strong>Not a capsule.</strong></li><li><strong>Not a chore.</strong></li><li>But a small, joyful moment worth looking forward to - one star at a time.</li></ul>"
    },
    { "type": "image_picker", "id": "left_image", "label": "Left image" },
    { "type": "color", "id": "section_bg", "label": "Section background", "default": "#efefef" },
    { "type": "color", "id": "panel_bg", "label": "Main panel background", "default": "#f6cb1f" },
    { "type": "color", "id": "title_bg", "label": "Title card background", "default": "#36b2b2" },
    { "type": "color", "id": "title_color", "label": "Title color", "default": "#ffffff" },
    { "type": "color", "id": "subtitle_color", "label": "Subtitle color", "default": "#ffffff" },
    { "type": "color", "id": "text_color", "label": "Text color", "default": "#ffffff" },
    { "type": "range", "id": "content_max_width", "label": "Content max width", "min": 980, "max": 1700, "step": 10, "default": 1220 },
    { "type": "range", "id": "left_col_width", "label": "Left column width (%)", "min": 30, "max": 60, "step": 1, "default": 44 },
    { "type": "range", "id": "padding_top", "label": "Padding top", "min": 0, "max": 220, "step": 4, "default": 26 },
    { "type": "range", "id": "padding_bottom", "label": "Padding bottom", "min": 0, "max": 220, "step": 4, "default": 58 }
  ],
  "presets": [{ "name": "Designed To Shine" }]
}
{% endschema %}
