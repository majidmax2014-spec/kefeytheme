  "max_blocks": 12,
  "class": "announcement-bar-section",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Countdown"
    },
    {
      "type": "checkbox",
      "id": "enable_countdown",
      "label": "Enable end-of-sale countdown",
      "default": false
    },
    {
      "type": "inline_richtext",
      "id": "countdown_message",
