      "info": "Use format YYYY-MM-DD HH:MM or full ISO (store local time)."
    },
    {
      "type": "color",
      "id": "countdown_accent_color",
      "label": "Timer accent color",
      "default": "#FFC72C"
    },
    {
      "type": "text",
      "id": "countdown_link_label",
      "label": "Right link label",
      "default": "LAST CHANCE"
    },
    {
      "type": "url",
      "id": "countdown_link_url",
      "label": "Right link URL"
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "t:sections.announcement-bar.settings.auto_rotate.label",
      "default": false
    },
    {
      "type": "range",
      "id": "change_slides_speed",
      "min": 3,
